{
    "name": "python-julia-devcontainer-template",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "args": {
            // "NVIDIA_CUDA_VARIANT": "12.1.1-cudnn8-runtime-ubuntu22.04",
            // "PYTHON_VARIANT": "3.11.3-bullseye",
            "JULIA_VARIANT": "1.9.0-rc3-bullseye",
            "JULIA_PATH": "/usr/local/julia",
            "USERNAME": "vscode",
            "USE_UID": "1000",
            "USE_GID": "1000",
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": [
                            "-l"
                        ]
                    }
                }
            },
            "extensions": [
                "julialang.language-julia",
                "VisualStudioExptTeam.vscodeintellicode",
            ],
        },
    },
    "containerEnv": {
        "JULIA_PATH": "/usr/local/julia",
        "JULIA_NUM_THREADS": "4",
        "JULIA_PROJECT": "${containerWorkspaceFolder}",
        "JULIA_DEPOT_PATH": "${containerWorkspaceFolder}/.julia",
    },
    "runArgs": [
        "--gpus",
        "all",
        // "--env-file",
        // ".devcontainer/devcontainer.env",
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "./.devcontainer/postCreateCommand.sh",
}